<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nz.co.udenbrothers.yoobie.RegisterTwoFragment">

    <ImageView
        android:contentDescription="@string/imgDes"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/back_arrow" />

    <TextView
        android:id="@+id/addEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="13%"
        android:text="atromoby@gmail.comertyuiortyuifgdfghfgh"
        android:textColor="#000000"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imgNameReg"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_marginStartPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="22.8%"
        android:contentDescription="@string/imgDes"
        android:src="@drawable/iconname" />

    <EditText
        android:id="@+id/editRegFirst"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="20%"
        app:layout_widthPercent="50%"
        android:inputType="text"
        app:layout_marginLeftPercent="5%"
        android:paddingLeft="40dp"
        android:paddingStart="40dp"
        android:background="@null"
        android:hint="First"
        android:textColor="#FFFF00"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/editRegLast"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="20%"
        app:layout_widthPercent="40%"
        android:inputType="text"
        app:layout_marginLeftPercent="55%"
        android:background="@null"
        android:hint="Last"
        android:textColor="#FFFF00"
        android:textColorHint="#FFFFFF" />

    <View
        android:layout_centerHorizontal="true"
        android:id="@+id/UnderLine2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_marginTopPercent="29%"
        app:layout_widthPercent="90%"
        android:background="#FFFFFF" />

    <ImageView
        android:id="@+id/imgRegMobile"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_marginStartPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="32.8%"
        android:contentDescription="@string/imgDes"
        android:src="@drawable/iconphone" />

    <EditText
        android:id="@+id/editRegMobile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="30%"
        app:layout_widthPercent="90%"
        android:layout_centerHorizontal="true"
        android:paddingLeft="40dp"
        android:paddingStart="40dp"
        android:background="@null"
        android:hint="Mobile"
        android:inputType="number"
        android:textColor="#FFFF00"
        android:textColorHint="#FFFFFF" />

    <View
        android:layout_centerHorizontal="true"
        android:id="@+id/UnderLine3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_marginTopPercent="39%"
        app:layout_widthPercent="90%"
        android:background="#FFFFFF" />

    <ImageView
        android:id="@+id/imgRegCountry"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_marginStartPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="43%"
        android:contentDescription="@string/imgDes"
        android:src="@drawable/iconlocation" />

    <Spinner
        android:id="@+id/editRegCountry"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="40%"
        app:layout_widthPercent="90%"
        android:layout_centerHorizontal="true"
        android:paddingLeft="32dp"
        android:paddingStart="32dp" />

    <View
        android:layout_centerHorizontal="true"
        android:id="@+id/UnderLine4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_marginTopPercent="49%"
        app:layout_widthPercent="90%"
        android:background="#FFFFFF" />

    <ImageView
        android:id="@+id/imgRegCity"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_marginStartPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="53%"
        android:contentDescription="@string/imgDes"
        android:src="@drawable/iconlocation" />

    <EditText
        android:id="@+id/editRegCity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="50%"
        app:layout_widthPercent="90%"
        android:layout_centerHorizontal="true"
        android:paddingLeft="40dp"
        android:paddingStart="40dp"
        android:background="@null"
        android:inputType="text"
        android:hint="City"
        android:textColor="#FFFF00"
        android:textColorHint="#FFFFFF" />

    <View
        android:layout_centerHorizontal="true"
        android:id="@+id/UnderLine5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_marginTopPercent="59%"
        app:layout_widthPercent="90%"
        android:background="#FFFFFF" />

    <ImageView
        android:id="@+id/imgRegDob"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_marginStartPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="62.8%"
        android:contentDescription="@string/imgDes"
        android:src="@drawable/dobicon" />

    <TextView
        android:id="@+id/editRegDob"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="60%"
        app:layout_widthPercent="90%"
        android:layout_centerHorizontal="true"
        android:paddingLeft="40dp"
        android:paddingStart="40dp"
        android:text="Date Of Birth"
        android:background="@null"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="#FFFFFF" />

    <View
        android:layout_centerHorizontal="true"
        android:id="@+id/UnderLine6"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_marginTopPercent="69%"
        app:layout_widthPercent="90%"
        android:background="#FFFFFF" />

    <RadioButton
        android:id="@+id/radioMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginStartPercent="20%"
        app:layout_marginLeftPercent="20%"
        app:layout_marginTopPercent="72.1%"
        android:checked="true"
        android:text="Male"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

    <RadioButton
        android:id="@+id/radioFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/radioMale"
        android:layout_toEndOf="@+id/whitedots2"
        android:layout_toRightOf="@+id/whitedots2"
        android:text="Female"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/imgRegGender"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_marginStartPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="72.8%"
        android:contentDescription="@string/imgDes"
        android:src="@drawable/gendericon" />

    <View
        android:layout_centerHorizontal="true"
        android:id="@+id/UnderLine7"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_marginTopPercent="79%"
        app:layout_widthPercent="90%"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/FinishButton"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_centerHorizontal="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="11%"
        app:layout_marginTopPercent="86%"
        android:background="@drawable/mybutton2"
        android:text="FINISH"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/whitedots2"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="82%"
        android:layout_centerHorizontal="true">

        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/grey_dot" />

        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/white_dot" />

    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>
