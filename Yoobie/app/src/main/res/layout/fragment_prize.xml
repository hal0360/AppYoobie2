<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="nz.co.udenbrothers.yoobie.PrizeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="UPCOMING PRIZES"
        android:textColor="#FFFFFF"
        app:layout_marginTopPercent="7%"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$20,000"
        android:textSize="50sp"
        android:textColor="#FFFFFF"
        app:layout_marginTopPercent="22%"
        app:layout_marginLeftPercent="10%" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next jackpot:"
        app:layout_marginLeftPercent="10%"
        android:textColor="#FFFFFF"
        app:layout_marginTopPercent="18%" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Recent Prize Winners"
        android:textColor="#FFFFFF"
        app:layout_marginTopPercent="72%"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:contentDescription="@string/imgDes"
        android:src="@drawable/white_head"
        android:layout_height="90dp"
        android:layout_width="90dp"
        app:layout_marginTopPercent="80%"
        android:layout_centerHorizontal="true" />


</android.support.percent.PercentRelativeLayout>
