<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="nz.co.udenbrothers.yoobie.ControlFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="ANIMATION"
        android:textColor="#000000"
        android:id="@+id/textView4"
        app:layout_marginTopPercent="7%"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="290dp"
        android:id="@+id/radioGroupAnimation"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="15%"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/radioButtonSlide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:buttonTint="#000000"
            android:textSize="12sp"
            android:drawableTop="?android:attr/listChoiceIndicatorSingle"
            android:textColor="#000000"
            android:gravity="center_horizontal|top"
            android:text="Slide in" />

        <RadioButton
            android:id="@+id/radioButtonZoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#000000"
            android:textColor="#000000"
            android:button="@null"
            android:textSize="12sp"
            android:drawableTop="?android:attr/listChoiceIndicatorSingle"
            android:gravity="center_horizontal|top"
            android:text="Zoom in"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <RadioButton
            android:id="@+id/radioButtonFade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:buttonTint="#000000"
            android:textSize="12sp"
            android:drawableTop="?android:attr/listChoiceIndicatorSingle"
            android:gravity="center_horizontal|top"
            android:text="Fade in"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

