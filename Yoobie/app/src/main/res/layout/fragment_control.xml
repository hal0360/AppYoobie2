    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="PLACEMENT"
        android:textColor="#000000"
        android:id="@+id/textView7"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="33%" />

    <RelativeLayout
        android:layout_width="220dp"
        android:id="@+id/radioGroupTiming"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="41%">

        <RadioButton
            android:id="@+id/radioButtonBefore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="12sp"
            android:buttonTint="#000000"
            android:drawableTop="?android:attr/listChoiceIndicatorSingle"
            android:textColor="#000000"
            android:gravity="center_horizontal|top"
            android:text="Lock Screen" />

        <RadioButton
            android:id="@+id/radioButtonAfter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="12sp"
            android:buttonTint="#000000"
            android:drawableTop="?android:attr/listChoiceIndicatorSingle"
            android:gravity="center_horizontal|top"
            android:text="After Lock Screen"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="DOWNLOAD OVER WIFI ONLY"
        android:textColor="#000000"
        android:id="@+id/textView12"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="60%" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:buttonTint="#000000"
        android:id="@+id/checkBoxWifi"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="67%" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="13%"
        app:layout_marginTopPercent="84%"
        android:textSize="35sp"
        android:text="LOGOUT"
        android:textColor="#ffffff"
        android:background="@drawable/logout_button"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:id="@+id/logoutButton"
        android:layout_centerHorizontal="true" />

