<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#B3000000"
    android:id="@+id/tutorial3"
    tools:context="nz.co.udenbrothers.yoobie.TutorialThreeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="20%">

        <View
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@drawable/border_tutorial"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"/>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="18dp">

            <View
                android:layout_width="60dp"
                android:layout_height="5dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#000000" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/thumby" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        app:layout_marginLeftPercent="91%"
        app:layout_marginStartPercent="91%"
        app:layout_marginTopPercent="11%"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_heightPercent="25%"
        android:background="#FFFFFF" />

    <View
        app:layout_marginLeftPercent="81%"
        app:layout_marginStartPercent="81%"
        app:layout_marginTopPercent="35.8%"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_widthPercent="10%"
        android:background="#FFFFFF" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_tutorial"
        app:layout_heightPercent="37%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginStartPercent="10%"
        app:layout_marginTopPercent="30%"
        app:layout_widthPercent="70%">

        <TextView
            android:text="ON/OFF BUTTON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:textSize="24sp"
            android:textColor="#000000" />

        <TextView
            android:text="If you ever get tired of the action and want to take a break, this button will do that for you."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp" />

        <TextView
            android:text="You won't be able to gain any extra entries or instant prizes while this is off but it's a convenient way to take a break from all that annoying free stuff."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="114dp" />

    </RelativeLayout>

    <TextView
        android:text="Tap anywhere to continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="93%" />

</android.support.percent.PercentRelativeLayout >
