<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_wallpaper"
    tools:context="nz.co.udenbrothers.yoobie.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:elevation="15dp"
        app:layout_heightPercent="20%">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:baselineAligned="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/homeButton"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:contentDescription="@string/imgDes"
                    android:id="@+id/homeImg"
                    android:src="@drawable/dark_home"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <View
                    android:id="@+id/homeLine"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/homeImg"
                    android:background="#000000" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/profileButton"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:contentDescription="@string/imgDes"
                    android:id="@+id/profileImg"
                    android:src="@drawable/light_profile"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <View
                    android:id="@+id/profileLine"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/profileImg"
                    android:background="#ffffff" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/prizesButton"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:contentDescription="@string/imgDes"
                    android:id="@+id/prizesImg"
                    android:src="@drawable/light_prize"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <View
                    android:id="@+id/prizesLine"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@+id/prizesImg"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settingButton"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:contentDescription="@string/imgDes"
                    android:id="@+id/settingImg"
                    android:src="@drawable/light_setting"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <View
                    android:id="@+id/settingLine"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@+id/settingImg"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/mySwitch"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="18dp">

            <View
                android:id="@+id/track"
                android:layout_width="60dp"
                android:layout_height="5dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#000000" />

            <View
                android:id="@+id/thumb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/thumby2" />

            <View
                android:id="@+id/thumb2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/thumby" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageHam"
            android:layout_width="63dp"
            android:layout_height="59dp"
            android:paddingLeft="25dp"
            android:paddingStart="25dp"
            android:paddingTop="20dp"
            android:contentDescription="@string/imgDes"
            android:src="@drawable/dark_hamburger" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="Yoobie"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/textView3"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <nz.co.udenbrothers.yoobie.models.WaveView
        android:id="@+id/myWave"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="80%"
        app:layout_marginTopPercent="20%" />

</android.support.percent.PercentRelativeLayout>

